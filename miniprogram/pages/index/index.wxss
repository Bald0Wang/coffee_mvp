/**index.wxss**/
page {
  background-color: #FFF8EE;
}

.page-container {
  padding: 30rpx;
}

/* 欢迎横幅样式 */
.welcome-banner {
  background: linear-gradient(135deg, #FF9D2F 0%, #FFBD6B 100%);
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  color: white;
  overflow: hidden;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 10rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 方法卡片样式 */
.method-cards {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.method-card {
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(255, 157, 47, 0.1);
}

.method-card-inner {
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.feature-icon {
  font-size: 80rpx;
  color: #FF9D2F;
  margin-bottom: 20rpx;
}

.method-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.method-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.method-tip {
  background-color: rgba(255, 157, 47, 0.1);
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 26rpx;
  color: #666;
  width: 100%;
  text-align: left;
  display: flex;
  align-items: center;
}

.tip-icon {
  color: #FF9D2F;
  margin-right: 10rpx;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}
